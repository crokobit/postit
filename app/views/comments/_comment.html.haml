%div{id: "comment_#{comment.id}"}
  .row
    .span0.well.text-center
      = link_to vote_up_post_comment_path(comment.post, comment), remote: true do
        %i.icon-arrow-up
      %br
      %span{id: "vote_count_#{comment.id}"}#{comment.vote_count} votes
      %br
      = link_to vote_down_post_comment_path(comment.post, comment), remote: true do
        %i.icon-arrow-down
    .well.span8
      %em= '"' + "#{comment.body}" '"'
      %br
      = comment.show_by_who_at_when
