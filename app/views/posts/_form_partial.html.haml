.well
  = bootstrap_form_for(@post) do |f|
    = f.text_field :title
    = f.text_field :url
    = f.text_area :description, rows: 5
    = f.collection_check_boxes(:category_ids, Category.all, :id, :name, label: "Categories") do |b|
      =b.label { b.check_box }
    = f.submit (@post.new_record? ? "Create Post" : "Edit Post"), class: "btn btn-primary"
